name: ML API CI/CD

on:
  push:
    branches: [main]

jobs:
  build-test:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v3

    - uses: actions/setup-python@v4
      with:
        python-version: "3.9"

    - run: pip install -r requirements.txt
    - run: pytest tests/

    - run: docker build -t my-ml-api:${{ github.sha }} .
    - run: echo "Docker push skipped (demo)"
